{
	"language": {
		"javascript": {
			"linting.prefer": "JSHint",
			"linting.usePreferredOnly": true
		}
	},
	"brackets-file-tree-exclude.excludeList": [
		"/.git/",
		"/dist/",
		"/bower_components/",
		"/node_modules/"
	],
    "typescript": {
        "target": "ES2015",
        "module": "AMD",
        "noImplicitAny": true,
        "sources" : [
            "src/declarations/**/*.ts",
            "src/main/**/*.ts"
        ]
    }
}
